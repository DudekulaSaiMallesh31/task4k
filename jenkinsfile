pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "mydockerhubusername/my-task-app:latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/DudekulaSaiMallesh31/task4k.git'
            }
        }

        stage('Pull Docker Image') {
            steps {
                bat 'docker pull %DOCKER_IMAGE%'
            }
        }

        stage('Stop & Remove Old Container') {
            steps {
                script {
                    def containerExists = bat(script: 'docker ps -a -q --filter name=my-task-app', returnStdout: true).trim()
                    if (containerExists) {
                        bat 'docker stop my-task-app || echo "Container not running"'
                        bat 'docker rm my-task-app || echo "Container already removed"'
                    } else {
                        echo 'No existing container found. Skipping stop and remove steps.'
                    }
                }
            }
        }

        stage('Run New Container') {
            steps {
                bat 'docker run -d -p 8080:8080 --name my-task-app %DOCKER_IMAGE%'
            }
        }

        stage('Verify Deployment') {
            steps {
                bat 'docker ps'
            }
        }
    }

    post {
        success {
            echo 'üöÄ Deployment Successful!'
        }
        failure {
            echo '‚ùå Deployment Failed!'
        }
    }
}
