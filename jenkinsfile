pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('ca163650-6033-4347-9b66-85f26163fe2b') // Jenkins credentials ID
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/DudekulaSaiMallesh31/task4k.git'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Docker Login') {
            steps {
                bat 'docker login -u %DOCKER_HUB_CREDENTIALS_USR% -p %DOCKER_HUB_CREDENTIALS_PSW%'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t mydockerhubusername/my-task-app:latest .'
            }
        }

        stage('Push Docker Image') {
            steps {
                bat 'docker push mydockerhubusername/my-task-app:latest'
            }
        }

        stage('Deployment') {
            steps {
                echo 'üöÄ Deployment Successful!'
            }
        }
    }

    post {
        failure {
            echo '‚ùå Deployment Failed!'
        }
    }
}
