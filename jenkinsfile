pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/DudekulaSaiMallesh31/task4k.git'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean install'  // Use bat for Windows
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t my-task-app .'  // Windows command
            }
        }

        stage('Push Docker Image') {
            steps {
                bat 'docker tag my-task-app mydockerhubusername/my-task-app:latest'
                bat 'docker push mydockerhubusername/my-task-app:latest'
            }
        }

        stage('Deployment') {
            steps {
                echo '🚀 Deployment Successful!'
            }
        }
    }

    post {
        failure {
            echo '❌ Deployment Failed!'
        }
    }
}
